{
  "info": {
    "name": "BidSphere API",
    "description": "Complete API collection for BidSphere auction platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:6000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "    console.log(\"Token saved:\", jsonData.token);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@bidsphere.com\",\n  \"password\": \"Admin@123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/Auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "Auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password@123\",\n  \"role\": \"User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/Auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "Auth", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products?category=Electronics&minPrice=100&maxPrice=1000",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "category",
                  "value": "Electronics",
                  "disabled": true
                },
                {
                  "key": "minPrice",
                  "value": "100",
                  "disabled": true
                },
                {
                  "key": "maxPrice",
                  "value": "1000",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Active Auctions",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products/active",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "active"]
            }
          }
        },
        {
          "name": "Get Product Details",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "1"]
            }
          }
        },
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Gaming Laptop\",\n  \"description\": \"High-performance gaming laptop\",\n  \"category\": \"Electronics\",\n  \"startingPrice\": 999.99,\n  \"auctionDuration\": 120\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          }
        },
        {
          "name": "Upload Products Excel (Admin)",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "products.xlsx"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/upload",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "upload"]
            }
          }
        },
        {
          "name": "Update Product (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Gaming Laptop\",\n  \"description\": \"Updated description\",\n  \"startingPrice\": 1099.99\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "1"]
            }
          }
        },
        {
          "name": "Finalize Auction (Admin)",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/api/products/1/finalize",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "1", "finalize"]
            }
          }
        },
        {
          "name": "Delete Product (Admin)",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/products/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/Users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "Users", "profile"]
            }
          }
        },
        {
          "name": "Update My Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"age\": 30,\n  \"phoneNumber\": \"+1234567890\",\n  \"address\": \"123 Main Street\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/Users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "Users", "profile"]
            }
          }
        },
        {
          "name": "Get All Users (Admin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/Users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "Users"]
            }
          }
        }
      ]
    }
  ]
}

